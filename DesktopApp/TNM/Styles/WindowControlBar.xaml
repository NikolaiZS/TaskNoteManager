<UserControl x:Class="TNM.Styles.WindowControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TNM.Styles" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="40">
    <DockPanel Background="#333333" MouseDown="TitleBar_MouseDown" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button Style="{StaticResource WindowControlButtonStyle}" Click="Minimize_Click">
                <ui:SymbolIcon Symbol="ArrowMinimize20" FontSize="20" />
            </ui:Button>
            <ui:Button Style="{StaticResource WindowControlButtonStyle}" Click="Maximize_Click">
                <ui:SymbolIcon Symbol="ArrowExpand20" FontSize="20" />
            </ui:Button>
            <ui:Button Style="{StaticResource WindowControlButtonStyle}" Foreground="Red" Click="Close_Click">
                <ui:SymbolIcon Symbol="Dismiss20" FontSize="20" />
            </ui:Button>
        </StackPanel>
    </DockPanel>
</UserControl>