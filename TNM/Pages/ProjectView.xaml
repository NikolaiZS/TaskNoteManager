<Page x:Class="TNM.Pages.ProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNM.Pages" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectView">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Vertical" Margin="10">
            <!-- Список проектов -->
            <ItemsControl Name="ProjectList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10,0">
                            <Border Margin="8" CornerRadius="8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#c71585" Offset="0.0"/>
                                        <GradientStop Color="#3C00FF" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border Margin="10" CornerRadius="8" Background="#333333">
                                <Grid Margin="6">
                                    <TextBlock 
                                    Text="{Binding ProjectName}" 
                                    FontSize="22" 
                                    Foreground="White" 
                                    FontWeight="Bold" 
                                    Margin="0,0,0,10" />
                                    <TextBlock 
                                    Text="{Binding Description}" 
                                    TextWrapping="Wrap" 
                                    FontSize="14" 
                                    Foreground="White" 
                                    Margin="0,40,0,10" />
                                    <Button 
                                        Content="Редактировать" 
                                        Foreground="White" 
                                        Height="40" 
                                        HorizontalAlignment="Stretch" 
                                        Margin="0,143,0,0" />
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопка создания нового проекта -->
            <Button Content="Создать новый проект"
                Margin="20,20,20,10"
                Height="50"
                FontSize="16"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Click="CreateNewProject_Click" />
        </StackPanel>
    </ScrollViewer>
</Page>
